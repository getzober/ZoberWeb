<section>
  <%= render 'layouts/header' %>
</section>

<div class="container-fluid">
  <div class="border-form-div-login">
    <h2 class="user_login">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-inputs user">
      <%= f.input :email, required: false, autofocus: true, class:"user_email" %>
      <%= f.input :password, required: false, class: "user_password" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"user_submit" %>
    </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>

<section>
  <%= render 'layouts/footer_main' %>
</section>
