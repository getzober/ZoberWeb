<section>
  <%= render "layouts/header" %>
</section>

<head>
  <meta charset="UTF-8">
</head>

<section class="house-display">
  <div class="slick-carousel">
    <div class="thumbnail text-center">
      <img src="https://i1.wp.com/blog.extraspace.com/wp-content/uploads/2017/06/VSP-Virtuall-Staged-Bedroom.jpg?resize=1500%2C400">
      <div class="caption">
        <p> <%=@house.name%> </p>
      </div>
    </div>
    <% @house.images.each do |image| %>
      <div>
        <img src="<%=image.image%>" />
      </div>
    <% end %>
  </div>

  <div class="container-fluid">
    <div>
      <div class="col-xs-12 col-lg-6">
        <div class="house-details">
          <div>
            <h3 class="title"> <%=@house.name%> </h3>
          </div>
          <div>
            <h5><%=@house.city + ', ' + @house.state %></h5>
          </div>
          <div>
            <%= @house.bio %>
          </div>
        </div>
      </div>

      <div>
        <h1>Amenities</h1>
        <ul>
          <% @house.filters_with_category( "Amenity" ).each do |amenity| %>
            <li><%= amenity %></li>
          <% end %>
        </ul>
      </div>

      <div>
        <h1>Sample Weekly Schedule</h1>
      </div>

      <div>
        <h1>Key Staff</h1>
      </div>

      <div>
        <h1>Accreditations</h1>
        <ul>
          <% @house.filters_with_category( "License/Certification/Accreditation" ).each do |accreditation| %>
            <li><%= accreditation %></li>
          <% end %>
        </ul>
      </div>

      <div>
        <h1>Financials</h1>
        <p>Monthly Self Pay Rate: <%= number_to_currency( @house.price ) %></p>
        <p>
          In Network Insurances Accepted:
          <ul>
            <% @house.filters_with_category( "Insurance Accepted" ).each do |insurance| %>
              <li><%= insurance %></li>
            <% end %>
          </ul>
        </p>
        <p>
          Payment Assistance:
          <ul>
            <li><%= @house.filters_with_category( "Payment Assistance" ) %></li>
          </ul>
        </p>
      </div>

      <div>
        <h1>Rules And Policies</h1>
      </div>

      <div>
        <h1>Location</h1>
      </div>
    </div>

    <div>
      <div>
        <h1>At A Glance</h1>
        <ul>
          <li><%= @house.filters_with_category( "House Type" ).join( ' + ' ) %></li>
          <li><%= @house.filters_with_category( "Neighborhood Type" ) %></li>
          <li><%= @house.filters_with_category( "Recovery Plan" ) %></li>
          <li><%= @house.filters_with_category( "Number Of Diagnoses" ) %></li>
          <li><%= @house.filters_with_category( "Gender" ) %></li>
          <li><%= @house.capacity %> Beds</li>
          <li><%= @house.filters_with_category( "Room Type" ).join( ' + ' ) %> Rooms</li>
          <li><%= @house.filters_with_category( "Electronics Policy" ) %></li>
          <li><%= @house.filters_with_category( "Smoking Policy" ) %></li>
          <li><%= @house.filters_with_category( "Pet" ) %></li>
        </ul>
      </div>

      <div>
        <h1>Treatment Approaches</h1>
        <ul>
          <% @house.filters_with_category( "Treatment Approach" ).each do |insurance| %>
            <li><%= insurance %></li>
          <% end %>
        </ul>
      </div>

      <div>
        <h1>Opioid Treatment</h1>
        <ul>
          <% @house.filters_with_category( "Opioid Treatment" ).each do |insurance| %>
            <li><%= insurance %></li>
          <% end %>
        </ul>
      </div>

      <div>
        <h1>Special Programs</h1>
        <ul>
          <% @house.filters_with_category( "Special Program" ).each do |insurance| %>
            <li><%= insurance %></li>
          <% end %>
        </ul>
      </div>

      <div>
        <h1>Alternative Therapies</h1>
        <ul>
          <% @house.filters_with_category( "Alternative Therapy" ).each do |insurance| %>
            <li><%= insurance %></li>
          <% end %>
        </ul>
      </div>

      <div>
        <h1>Contact Info</h1>
        <p><%= @house.address %></p>
        <p><a href=<%= @house.website %>>Website</a></p>
        <p><%= @house.phone %></p>
      </div>

      <p>
        <h1>Social Links</h1>
        <p></p><a href=<%= @house.facebook %>>Facebook</a></p>
        <p><a href=<%= @house.twitter %>>Twitter</a></p>
        <p><a href=<%= @house.instagram %>>Instagram</a></p>
        <p><a href=<%= @house.linkedin %>>LinkedIn</a></p>
      </div>
    </div>
  </div>

  <div>
    <h1>Other Locations By This Provider</h1>
  </div>
</section>


<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.7/slick.min.js"></script>


<script>
$(document).ready(function(){
  $('.slick-carousel').slick({
    dots: false,
    arrows: true,
    infinite: true,
    speed: 300,
    slidesToShow: 1,
    centerMode: true,
    variableWidth: true
  }); 
});
</script>



<section>
  <%= render "layouts/footer_main" %>
</section>

