<section>
  <%= render "layouts/header" %>
</section>

<body class='houses_list'>
  <menu>
    <div id="filters">
      <button id="type" class="filter">type</button>
      <button id="distance" class="filter">distance</button>
      <button id="price-low" class="filter">price low</button>
      <button id="price-high" class="filter">price high</button>
      <button id="gender" class="filter">gender</button>
      <button id="room-type" class="filter">room type</button>
      <button id="style" class="filter">style</button>
      <button id="amenities" class="filter">amenities</button>
      <button id="sort-by" class="filter">sort by</button>
    </div>
  </menu>

  <div class='app-wrapper'>
    <div id='map-area'>
      <div id='map'> </div>
    </div>

    <div id="app">
      <div class='sidebar'>
        <div class="row">
          <div v-for="house in modifiedHouses" v-if="filterHouses(house)" >
            <div class="imagebox">
              <a class="link_to_house" v-bind:href="'/houses/'+ house.id">
                <div id="carousel" class="carousel slide" data-interval="false">
                  <ol class="carousel-indicators">
                    <li data-target="#carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel" data-slide-to="1"></li>
                    <li data-target="#carousel" data-slide-to="2"></li>
                  </ol>
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img class="d-block w-100" v-bind:src="house.images[0].image" alt="First slide">
                    </div>
                    <div class="carousel-item">
                      <img class="d-block w-100" v-bind:src="house.images[1].image" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                      <img class="d-block w-100" v-bind:src="house.images[2].image" alt="Third slide">
                    </div>
                  </div>
                  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>

                <div class="col-4">
                  <span class="imagebox-desc">
                  </span>
                </div>
              </a>
            </div>
          </div>
        </div>

        <section>
          <%= render "layouts/footer_main" %>
        </section>

      </div>
    </div>
  </div>
</body>
