<section>
  <%= render 'layouts/header' %>
</section>
<div class="container-fluid signup">
<div class="border-form-div-login">


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <!-- <%= f.error_notification %> --><h2 class="provider_signup">sign up</h2><br>
<%= devise_error_messages! %>
  <div class="form-inputs">
    <div class="please_select">please select if you are a provider or a non-profit
<%= f.select :role, Provider.roles.keys, {}, class: 'user-roles-select' %>
</div>
    <%= f.input :firstname, required: true, autofocus:true %><br>
    <%= f.input :lastname, required: true, autofocus:true %><br>
    <%= f.input :organization, required: true, autofocus:true %><br>
    <%= f.input :occupation, required: true, autofocus:true %><br>
    <%= f.input :email, required: true, autofocus: true %><br>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %><br>
    <%= f.input :password_confirmation, required: true %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'user_submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
<section>
  <%= render 'layouts/footer_main' %>
</section>
