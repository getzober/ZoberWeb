<header class="navbar navbar-expand-lg navbar-light fixed-top" id="secondNav">
  <div class="container-fluid">
    <a class="navbar-brand js-scroll-trigger" href="/houses">
      <%=image_tag("tinylogo.png", alt: "tinylogo", class: "tinylogo img-fluid ")%>
    </a>
    <button class="menu navbar-toggler navbar-toggler-right" type="button"
     data-toggle="collapse" data-target="#navbarResponsive"
     aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      Menu
    </button>

    <div class="col-md-5 mx-auto">
      <%= form_tag(houses_path, method: "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], id: "search_term", name:"user_location", placeholder: "enter city, state or zipcode", class: "search_field" %>
        <%= submit_tag "search", class: "btn btn-sm btn-default" %>
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="/index">providers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="/about">about</a>
        </li>
        <!-- commenting out social link for now -->
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="/social">social</a>
        </li>
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="/blogs">blog</a>
        </li>

        <li class="dropdown users">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"
           role="button" aria-haspopup="true" aria-expanded="false">
            users <span class="caret"></span>
          </a>
          <ul class="dropdown-menu providers">
            <% if user_signed_in? %>
              <li class="link_items">
                <%= link_to "logout", destroy_user_session_path, method: :delete, class: "link_items" %>
              </li>
              <li>
                <%= link_to "dashboard", index_path, class: "link_items" %>
              </li>
            <% else %>
              <li class="link_items">
                <%= link_to "register", new_user_registration_path, class: "link_items" %>
              </li>
              <li class="link_items">
                <%= link_to "login", new_user_session_path, class: "link_items" %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</header>
